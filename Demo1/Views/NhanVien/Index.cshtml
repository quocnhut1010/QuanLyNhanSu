@model IEnumerable<Demo1.Models.NHANVIEN>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin1.cshtml";
}

<h2 style="text-align:center; color:red">Danh Sách Nhân Viên</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Họ Tên
        </th>
        <th>
           Giới Tính
        </th>
        <th>
            Ngày Sinh
        </th>
        <th>
            Hình Ảnh
        </th>
        <th>
            Quên Quán
        </th>
        <th>
            Tạm Trú
        </th>
        <th>
            SĐT
        </th>
        <th>
           Email
        </th>
        <th>
           Dân Tộc
        </th>
        <th>
            Học Vấn
        </th>
        <th>
           Ngày Vào Làm
        </th>
        <th>
            Số căn cước công dân
        </th>
        <th>
            Mã số hợp đồng
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.HOTEN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GIOITINH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NGAYSINH)
        </td>
        <td>
            <img src="@Url.Content("~/img/" + item.HINHANH)" alt="Hình ảnh nhân viên" width="130" height="110" />
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.QUEQUAN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TAMTRU)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SDT)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EMAIL)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DANTOC)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HOCVAN)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NGAYVAOLAM)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CCCD)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MSHD)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.MSNV }) |
            @Html.ActionLink("Details", "Details", new { id = item.MSNV }) |
 
            @Html.ActionLink("Xóa", "Delete", new { id = item.MSNV }, new { @class = "btn btn-danger" })
    

        </td>
    </tr>
}

</table>
